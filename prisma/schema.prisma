generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  clerkId  String  @unique
  email    String  @db.Text
  name     String?
  imageUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vocabularyEntries VocabularyEntry[]
  collections       Song[]
}

model Song {
  id          String    @id @default(uuid())
  geniusId    String?   @unique
  geniusPath  String?   @unique
  title       String
  artist      String
  album       String?
  releaseDate DateTime?
  artworkUrl  String?
  language    String? // e.g. 'en'
  url         String? // canonical song url

  details               Json?
  detailsFetchedAt      DateTime?
  detailsUpdatePeriod   UpdatePeriod @default(HALF_YEAR)
  referentsFetchedAt    DateTime?
  referentsUpdatePeriod UpdatePeriod @default(THREE_MONTHS)

  lyrics            Lyric?
  referents         Referent[]
  vocabularyEntries VocabularyEntry[]
  collectedBy       User[]

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  updatePeriod UpdatePeriod @default(YEARLY)

  @@index([title, artist])
  @@index([artist])
  @@index([geniusPath])
}

model VocabularyEntry {
  id         String @id @default(uuid())
  userId     String
  songId     String
  word       String
  line       String
  lineNumber Int?
  result     String @db.Text
  songPath   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mastered    Boolean   @default(false)
  masteredAt  DateTime?
  reviewCount Int       @default(0)
  reviewAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([songId])
}

model Lyric {
  id       String  @id @default(uuid())
  songId   String  @unique
  content  String  @db.Text
  provider String?
  summary  String? @db.Text

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  updatePeriod UpdatePeriod @default(HALF_YEAR)

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([songId])
}

model Referent {
  id             String  @id @default(uuid())
  geniusId       Int     @unique
  songId         String
  fragment       String
  content        String? @db.Text
  provider       String?
  classification String
  rangeContent   String?
  path           String?
  url            String?

  annotations ReferentAnnotation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([songId])
}

model ReferentAnnotation {
  id           String  @id @default(uuid())
  annotationId Int     @unique
  referentId   String
  body         String? @db.Text
  url          String
  votesTotal   Int
  verified     Boolean
  source       String?
  authors      Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  referent Referent @relation(fields: [referentId], references: [id], onDelete: Cascade)

  @@index([referentId])
}

enum UpdatePeriod {
  YEARLY
  HALF_YEAR
  THREE_MONTHS
  MONTHLY
}
